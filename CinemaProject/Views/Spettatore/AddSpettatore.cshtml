@model SpettatoreViewModel;

@{
    ViewBag.Title = "Aggiungi Spettatore";
}

@if(ViewBag.Message != null)
{
    <div roll="alert" class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Inserisci i tuoi dati</div>
        <hr>
        @Html.HiddenFor(model => model.IdSpettatore)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Cognome, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cognome)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.DataNascita, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataNascita)
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Indietro","SpettatoreIndex")
</div>
